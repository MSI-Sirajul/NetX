<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_background">

    <!-- ============================================ -->
    <!-- 1. PERMISSION / ONBOARDING LAYOUT           -->
    <!-- ============================================ -->
    <LinearLayout
        android:id="@+id/permission_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="32dp"
        android:visibility="visible"> <!-- শুরুতে এটি visible থাকবে -->

        <!-- App Icon (Zoom In) -->
        <ImageView
            android:id="@+id/animIcon"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/lte_strong"
            android:tint="@color/app_primary"
            android:layout_marginBottom="16dp" />

        <!-- App Name (Slide Up) -->
        <TextView
            android:id="@+id/animTitle"
            style="@style/TextTitleLarge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="NetX Monitor"
            android:textSize="28sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"/>

        <!-- Description (Typing Animation) -->
        <TextView
            android:id="@+id/animDesc"
            style="@style/TextBodyMedium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="" 
            android:minLines="2"
            android:layout_marginBottom="48dp"/>

        <!-- Overlay Permission Row (Slide Right) -->
        <LinearLayout
            android:id="@+id/rowOverlay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/bg_card_surface"
            android:padding="16dp"
            android:layout_marginBottom="16dp">
            
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical">
                
                <TextView
                    style="@style/TextTitleLarge"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Display Over Apps"
                    android:textSize="16sp"/>

                <Switch
                    android:id="@+id/permOverlayToggle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:thumb="@drawable/switch_thumb"
                    android:track="@drawable/switch_track" />
            </LinearLayout>
            
            <TextView
                style="@style/TextBodyMedium"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:textSize="12sp"
                android:text="Required to show the real-time internet speed meter on top of other apps."/>
        </LinearLayout>

        <!-- Notification Permission Row (Slide Right) -->
        <LinearLayout
            android:id="@+id/rowNotif"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/bg_card_surface"
            android:padding="16dp"
            android:layout_marginBottom="32dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical">

                <TextView
                    style="@style/TextTitleLarge"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Post Notifications"
                    android:textSize="16sp"/>

                <Switch
                    android:id="@+id/permNotifToggle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:thumb="@drawable/switch_thumb"
                    android:track="@drawable/switch_track" />
            </LinearLayout>

            <TextView
                style="@style/TextBodyMedium"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:textSize="12sp"
                android:text="Required to keep the service running in background and show status."/>
        </LinearLayout>

        <!-- Done Button (Fade In) -->
        <Button
            android:id="@+id/btnDone"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="Get Started"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#4C8CFF"
            android:background="@drawable/bg_button_primary"
            android:stateListAnimator="@null"/>

    </LinearLayout>

    <!-- ============================================ -->
    <!-- 2. MAIN DASHBOARD LAYOUT (Existing Code)    -->
    <!-- ============================================ -->
    <ScrollView
        android:id="@+id/dashboard_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:scrollbars="none"
        android:visibility="gone"> <!-- শুরুতে hidden থাকবে -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="24dp"
            android:paddingTop="48dp"
            android:paddingEnd="24dp"
            android:paddingBottom="24dp">

            <!-- Header Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        style="@style/TextTitleLarge"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="NetX Monitor"
                        android:textStyle="bold" />

                    <TextView
                        style="@style/TextBodyMedium"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Realtime tracking"
                        android:layout_marginTop="4dp" />
                </LinearLayout>

                <TextView
                    android:id="@+id/currentStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_status_pill"
                    android:paddingStart="16dp"
                    android:paddingTop="6dp"
                    android:paddingEnd="16dp"
                    android:paddingBottom="6dp"
                    android:text="Active"
                    android:textColor="@color/app_primary"
                    android:textSize="12sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <View android:layout_width="match_parent" android:layout_height="32dp" />

            <!-- Stats Grid (Copy of your existing grid) -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:baselineAligned="false"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginEnd="8dp"
                    android:background="@drawable/bg_card_surface"
                    android:orientation="vertical"
                    android:padding="20dp">
                    <ImageView android:layout_width="28dp" android:layout_height="28dp" android:src="@drawable/wifi_strong" android:tint="@color/app_primary" />
                    <TextView style="@style/TextBodyMedium" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="16dp" android:text="WiFi Usage" />
                    <TextView android:id="@+id/wifiUsage" style="@style/TextValueLarge" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="4dp" android:text="0 MB" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="8dp"
                    android:background="@drawable/bg_card_surface"
                    android:orientation="vertical"
                    android:padding="20dp">
                    <ImageView android:layout_width="28dp" android:layout_height="28dp" android:src="@drawable/lte_strong" android:tint="@color/app_accent" />
                    <TextView style="@style/TextBodyMedium" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="16dp" android:text="Data Usage" />
                    <TextView android:id="@+id/dataUsage" style="@style/TextValueLarge" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="4dp" android:text="0 MB" />
                </LinearLayout>
            </LinearLayout>

            <View android:layout_width="match_parent" android:layout_height="16dp" />

            <!-- Speed Grid -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:baselineAligned="false"
                android:orientation="horizontal">
                
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginEnd="8dp"
                    android:background="@drawable/bg_card_surface"
                    android:orientation="vertical"
                    android:padding="20dp">
                    <ImageView android:layout_width="24dp" android:layout_height="24dp" android:src="@drawable/download" android:tint="@color/app_success" />
                    <TextView android:id="@+id/currentDownload" style="@style/TextValueLarge" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="12dp" android:text="0 KB/s" android:textSize="18sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="8dp"
                    android:background="@drawable/bg_card_surface"
                    android:orientation="vertical"
                    android:padding="20dp">
                    <ImageView android:layout_width="24dp" android:layout_height="24dp" android:src="@drawable/upload" android:tint="@color/app_error" />
                    <TextView android:id="@+id/currentUpload" style="@style/TextValueLarge" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="12dp" android:text="0 KB/s" android:textSize="18sp" />
                </LinearLayout>
            </LinearLayout>

            <View android:layout_width="match_parent" android:layout_height="40dp" />

            <!-- Controls (Overlay Settings) -->
            <TextView style="@style/TextTitleLarge" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginBottom="16dp" android:text="Overlay Control" android:textSize="18sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_card_surface"
                android:orientation="vertical"
                android:padding="8dp">

                <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:gravity="center_vertical" android:padding="12dp">
                    <ImageView android:layout_width="24dp" android:layout_height="24dp" android:src="@drawable/lock" android:tint="@color/app_text_secondary" />
                    <TextView style="@style/TextBodyMedium" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_marginStart="16dp" android:layout_weight="1" android:text="Lock Position" android:textColor="@color/app_text_primary" />
                    <Switch android:id="@+id/lockOverlayToggle" android:layout_width="wrap_content" android:layout_height="wrap_content" android:thumb="@drawable/switch_thumb" android:track="@drawable/switch_track" />
                </LinearLayout>
                
                <View android:layout_width="match_parent" android:layout_height="1dp" android:background="@color/app_divider" android:layout_marginHorizontal="12dp"/>

                <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:gravity="center_vertical" android:padding="12dp">
                    <ImageView android:layout_width="24dp" android:layout_height="24dp" android:src="@drawable/auto" android:tint="@color/app_text_secondary" />
                    <TextView style="@style/TextBodyMedium" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_marginStart="16dp" android:layout_weight="1" android:text="Auto Hide" android:textColor="@color/app_text_primary" />
                    <Switch android:id="@+id/autoHideToggle" android:layout_width="wrap_content" android:layout_height="wrap_content" android:thumb="@drawable/switch_thumb" android:track="@drawable/switch_track" />
                </LinearLayout>

                 <View android:layout_width="match_parent" android:layout_height="1dp" android:background="@color/app_divider" android:layout_marginHorizontal="12dp"/>

                <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:gravity="center_vertical" android:padding="12dp">
                    <ImageView android:layout_width="24dp" android:layout_height="24dp" android:src="@drawable/disable" android:tint="@color/app_text_secondary" />
                    <TextView style="@style/TextBodyMedium" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_marginStart="16dp" android:layout_weight="1" android:text="Disable Overlay" android:textColor="@color/app_text_primary" />
                    <Switch android:id="@+id/disableOverlayToggle" android:layout_width="wrap_content" android:layout_height="wrap_content" android:thumb="@drawable/switch_thumb" android:track="@drawable/switch_track" />
                </LinearLayout>
            </LinearLayout>
            
            <!-- Footer Buttons -->
             <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView android:id="@+id/profileBt" android:layout_width="40dp" android:layout_height="40dp" android:background="@drawable/bg_button_primary" android:padding="10dp" android:src="@drawable/lock" android:tint="@color/app_primary" android:layout_marginEnd="16dp"/>
                <ImageView android:id="@+id/githubBt" android:layout_width="40dp" android:layout_height="40dp" android:background="@drawable/bg_button_primary" android:padding="10dp" android:src="@drawable/github" android:tint="@color/app_primary"/>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</FrameLayout>